{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2021",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts", "src/index.js"],
  "exclude": ["node_modules"]
}
